<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link rel="stylesheet" href="/css/styles.css">  
    <link rel="stylesheet" href="/css/forms.css">  
    <%- include('./partials/navbar.ejs', { header: 'Your Header Value' }) %>
    <h1>Edit Profile</h1>
</head>
<body>
    <%- include('./partials/profilePhoto.ejs')%>
    <form action="/editProfile/" method="POST">
        <%- include('./partials/status.ejs')%>

    <%- include('./partials/profileInputs.ejs')%>
    <form action="/editProfile/accountInfo" method="POST">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        
        <button type="submit">Update Account Info</button>
      </form>

    </form>

    <form action="/blogPost/" method="POST">
        <%- include('./partials/blogInputs.ejs')%>

    </form>
    <a href="/">Go Back</a>
   
</body>
</html>
