<!-- create_post.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Your custom CSS -->
    <link rel="stylesheet" type="text/css" href="/create_post.css">
</head>
<body>
    <% include('partials/header') %>

    <div class="container">
        <!-- Blog Post Section -->
        <section class="blog-posts">
            <div class="row">
                <% blogPosts.forEach(post => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <!-- Blog Post Image -->
                        <img src="<%= post.image %>" class="card-img-top" alt="Blog Post Image">
                        <div class="card-body">
                            <!-- Blog Post Title -->
                            <h5 class="card-title"><%= post.title %></h5>
                            <!-- Blog Post Content -->
                            <p class="card-text"><%= post.content %></p>
                            <!-- Read More Button -->
                            <a href="/blog/<%= post._id %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
    </div>

    <% include('partials/footer') %>

    <!-- Bootstrap Bundle JS (including Popper.js) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-7Pi/otdlbbCR+LnW+F7PwFcSDJOuUJB3OxtEHbg4vSMvzvJjde4Po1v4BR9Gdc9aXNUNFVUY+SK51wWT8WF0Gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Your custom JavaScript -->
    <script>
        // Add your custom JavaScript code here
    </script>
</body>
</html>
